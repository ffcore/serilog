{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs\\myapp.txt",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": "1000000",
          "rollOnFileSizeLimit": "True",
          "retainedFileCountLimit": "10"
        }
      }
    ]
  }
}